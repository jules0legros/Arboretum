<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/im_fond" >

    <Button
        android:id="@+id/button_nav_virt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_nav_reel"
        android:layout_centerHorizontal="true"
        android:text="@string/nav_virt" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/titre_appli"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/noir"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_nav_virt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="@string/credits" />

    <Button
        android:id="@+id/button_nav_reel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/nav_reel" />

</RelativeLayout>